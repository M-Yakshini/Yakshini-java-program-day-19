class Solution {
    public ListNode mergeKLists(ListNode[] lists) {
        PriorityQueue<ListNode> pq = new PriorityQueue<>((a, b) -> a.val - b.val);
        for (ListNode n : lists) if (n != null) pq.add(n);
        ListNode d = new ListNode(0), c = d;
        while (!pq.isEmpty()) {
            ListNode n = pq.poll();
            c.next = n;
            c = c.next;
            if (n.next != null) pq.add(n.next);
        }
        return d.next;
    }
}
