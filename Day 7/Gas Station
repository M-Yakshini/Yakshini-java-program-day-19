class Solution {
    public int canCompleteCircuit(int[] g, int[] c) {
        int t = 0, s = 0, i = 0;
        for (int k = 0; k < g.length; k++) {
            t += g[k] - c[k];
            s += g[k] - c[k];
            if (s < 0) {
                i = k + 1;
                s = 0;
            }
        }
        return t >= 0 ? i : -1;
    }
}
